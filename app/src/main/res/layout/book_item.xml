<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_alignParentTop="true"-->
<!--            android:layout_margin="10dp"-->
<!--            android:text="Line 2" />-->
    </RelativeLayout>


</androidx.cardview.widget.CardView>